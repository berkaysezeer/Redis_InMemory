@model Dictionary<string,string>
@{
    ViewData["Title"] = "Index";
}

<form method="post" asp-action="Add" enctype="application/x-www-form-urlencoded">
    <div class="row">
        <div class="form-group">
            <input type="text" name="name" />
            <input type="text" name="value" />
            <button type="submit">Ekle</button>
        </div>
        <div class="form-group">
        </div>
    </div>
</form>

<div class="row mt-5">
    <div class="form-group">
        @foreach (var name in Model)
        {
            <p>@name.Key - @name.Value <a asp-action="Remove" asp-route-key="@name.Key">Sil</a></p>
        }
    </div>
</div>