@model List<string>
@{
    ViewData["Title"] = "Index";
}

<form method="post" asp-action="Add" enctype="application/x-www-form-urlencoded">
    <div class="row">
        <div class="form-group">
            <input type="text" name="name" />
            <button type="submit">Ekle</button>
        </div>
        <div class="form-group">
        </div>
    </div>
</form>

<a asp-action="RemoveFirstName" asp-controller="ListType">Baştan Sil</a>

<div class="row mt-5">
    <div class="form-group">
        @foreach (var name in Model)
        {
            <p>@name <a asp-action="Remove" asp-controller="ListType" asp-route-name="@name">Sil</a></p>
        }
    </div>
</div>
